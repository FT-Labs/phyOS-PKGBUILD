# Maintainer: Arda Atci<arda@ftlabs.tech>
pkgname=pdwmc
pkgver=1.1
pkgrel=0
pkgdesc="Config editor for pdwm"
arch=(x86_64)
url="https://github.com/FT-Labs/pdwmc/"
license=('MIT')
makedepends=('git' 'make')
depends=('python' 'phyOS-simple-term-menu' 'python-tabulate' 'python-pycparser' 'python-pyqt5')
optdepends=('pdwm')
provides=("pdwmc")
options=('zipman')
source=(git+${url})
sha256sums=('SKIP')

package() {
    cd "$pkgname"
	make PREFIX=/usr DESTDIR="$pkgdir/" install
}
