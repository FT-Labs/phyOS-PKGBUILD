# Maintainer: Arda Atci<arda@ftlabs.tech>
pkgname=pdwm
pkgver=1.0.1
pkgrel=02
pkgdesc="Config editor for phyOS-dwm-beta"
arch=(x86_64)
url="https://github.com/FT-Labs/pdwm/"
license=('MIT')
makedepends=('git' 'make')
depends=('python' 'phyOS-simple-term-menu' 'python-tabulate' 'python-pycparser' 'python-pyqt5')
optdepends=('phyOS-dwm-beta')
provides=("pdwm")
options=('zipman')
source=(git+${url})
sha256sums=('SKIP')

package() {
    cd "$pkgname"
	make PREFIX=/usr DESTDIR="$pkgdir/" install
}
