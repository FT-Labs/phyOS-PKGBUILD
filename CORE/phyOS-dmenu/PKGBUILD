# Maintainer: Arda Atci<arda@phytech.io>
pkgname=phyOS-dmenu
pkgver=5.0
pkgrel=1
pkgdesc="dmenu build for phyOS"
arch=(x86_64)
url="https://github.com/PhyTech-R0/phyOS-dmenu"
license=('MIT')
depends=('coreutils' 'fontconfig' 'freetype2' 'glibc' 'fontconfig' 'libx11' 'libxft' 'libxinerama')
makedepends=('git' 'make')
optdepends=('st')
provides=("dmenu")
conflicts=("dmenu")
options=('zipman')
source=('git+https://github.com/PhyTech-R0/phyOS-dmenu')
md5sums=('SKIP')

build() {
	cd "$pkgname"
	make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
	cd "$pkgname"
	make PREFIX=/usr DESTDIR="$pkgdir/" install
	install -m644 -D LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
